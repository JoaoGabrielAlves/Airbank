generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id          String        @id @unique
  name        String
  bank        String
  Transaction Transaction[]
}

model Category {
  id          String        @id @unique
  name        String
  color       String?
  Transaction Transaction[]
}

model Transaction {
  id         String    @id @unique
  accountId  String
  categoryId String?
  reference  String?
  amount     String
  currency   String
  date       String
  Account    Account   @relation(fields: [accountId], references: [id])
  Category   Category? @relation(fields: [categoryId], references: [id])
}
