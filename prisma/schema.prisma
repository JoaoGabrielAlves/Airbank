generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id          String        @id @unique
  name        String
  bank        String
  Transaction Transaction[]

  @@index(name)
  @@index(bank)
}

model Category {
  id          String        @id @unique
  name        String        @unique
  color       String?
  Transaction Transaction[]

  @@index(name)
}

model Transaction {
  id         String    @id @unique
  accountId  String
  categoryId String?
  reference  String?
  amount     Decimal
  currency   String
  date       String
  Account    Account   @relation(fields: [accountId], references: [id])
  Category   Category? @relation(fields: [categoryId], references: [id])

  @@index([categoryId, accountId])
  @@index([reference, amount, currency, date])
}
